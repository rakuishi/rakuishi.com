---
import Base from "@/layouts/Base.astro";
import Date from "@/components/Date.astro";
import { type CollectionEntry } from 'astro:content';

export interface Props {
  post: CollectionEntry<'posts'>;
}

const { post } = Astro.props;
---

<Base title={post.data.title} description={post.data.description} image={post.data.image}>
  <main>
    <article
      class="blog_post"
      itemscope
      itemtype="http://schema.org/BlogPosting"
    >
      <h1 class="blog_post_title" itemprop="name">
        {post.data.title}
      </h1>
      <div class="blog_post_meta">
        <Date date={post.data.date} />{
          post.data.category && (
            <>
              /
              <a
                class="blog_post_meta_category"
                href={`/categories/${post.data.category}/`}
              >
                {post.data.category}
              </a>
            </>
          )
        }
      </div>
      <div
        class:list={["markdown", `category-${post.data.category ?? "none"}`]}
        itemprop="text"
      >
        <slot />
      </div>
    </article>
  </main>
</Base>

<style>
  .blog_post {
    max-width: var(--max-width);
    margin: 0 auto 48px;
    padding: 0 24px;
  }
  .blog_post_title {
    font-size: 28px;
    margin-bottom: 4px;
  }
  .blog_post_meta {
    margin-bottom: 48px;
    color: var(--secondary-text-color);
    font-family: var(--mono-font-family);
  }
  .blog_post_meta_category {
    color: var(--secondary-text-color);
    text-transform: capitalize;
  }
  .blog_post_meta_category:hover {
    color: var(--secondary-text-color);
    text-decoration: underline;
  }
</style>
